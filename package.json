  "description": "String formatting library",
  "main": "dist/bundle.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "build": "webpack --env.prod --config ./webpack/webpack.config.js",
    "watch": "webpack --env.prod=false --watch --config ./webpack/webpack.config.js",
    "build-tests": "webpack --env.prod=false --config ./webpack/tests.config.js",
    "test": "mocha ./dist/test --recursive",
    "build-and-test": "npm run build-tests && npm test"

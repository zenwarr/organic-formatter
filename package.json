  "bugs": {
    "url": "https://github.com/zenwarr/organic-formatter/issues"
  },
  "homepage": "https://github.com/zenwarr/organic-formatter#readme",
  "dependencies": {
    "moment": "^2.21.0",
    "numeral": "^2.0.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.0",
    "@types/moment": "^2.13.0",
    "@types/numeral": "0.0.22",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.4",
